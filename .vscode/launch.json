{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Next.js: Debug API",
        "type": "node",
        "request": "launch",
        "runtimeExecutable": "pnpm",
        "runtimeArgs": ["run", "dev:inspect"],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "env": {
          "NODE_ENV": "development"
        },
        "skipFiles": ["<node_internals>/**"]
      }
    ]
  }
  